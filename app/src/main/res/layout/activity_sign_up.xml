<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEBEB"
    tools:context="com.pizza.pizzabytes.SignUpActivity">

    <ImageView
        android:id="@+id/signuppizza"
        android:layout_width="wrap_content"
        android:tint="#6F000000"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/startup1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/signuppizzaname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/aguafina_script"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="48dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/signuppizza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/signuppizzatag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:text="Best Pizza in The Town"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/signuppizza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".62"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuppizzaname"
        app:layout_constraintVertical_bias="0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="220dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="60dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuppizza">
<!--        upper line only edit-->


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Create An Account"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nametext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="15dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/black"
                    android:text="Full Name"/>

                <EditText
                    android:id="@+id/signupname"
                    android:layout_width="match_parent"
                    android:ems="10"
                    android:textSize="18dp"
                    android:padding="17dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:hint="Your Name"
                    android:background="@drawable/box"
                    android:paddingLeft="25dp"
                    android:inputType="textPersonName"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/phonetext"

                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="Phone Number"/>

                <EditText
                    android:id="@+id/signupnumber"
                    android:layout_width="match_parent"
                    android:ems="10"
                    android:inputType="number"
                    android:textSize="18dp"
                    android:padding="17dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:hint="03001234567"
                    android:background="@drawable/box"
                    android:paddingLeft="25dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/passtext"

                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="Password"/>

                <EditText
                    android:layout_width="match_parent"
                    android:ems="10"
                    android:id="@+id/signuppassword"
                    android:textSize="18dp"
                    android:padding="17dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:hint="••••••••••••"
                    android:inputType="textPassword"
                    android:background="@drawable/box"
                    android:paddingLeft="25dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/repasstext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"

                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/black"
                    android:text="Repeat Password"/>

                <EditText
                    android:id="@+id/repeatpassword"
                    android:layout_width="match_parent"
                    android:ems="10"
                    android:textSize="18dp"
                    android:inputType="textPassword"
                    android:padding="17dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:hint="••••••••••••"
                    android:background="@drawable/box"
                    android:paddingLeft="25dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:text="Personal Information"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:id="@+id/emailtext"
                    android:textColor="@color/black"
                    android:text="Email"/>

                <EditText
                    android:id="@+id/signupemail"
                    android:layout_width="match_parent"
                    android:ems="10"
                    android:textSize="18dp"
                    android:inputType="textEmailAddress"
                    android:padding="17dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:hint="yourname@email.com"
                    android:background="@drawable/box"
                    android:paddingLeft="25dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="County/Region"/>

                <EditText
                    android:id="@+id/countryspin"
                    android:layout_width="match_parent"
                    android:ems="10"
                    android:textSize="18dp"
                    android:inputType="none"
                    android:padding="17dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:text="Pakistan"
                    android:editable="false"
                    android:background="@drawable/box"
                    android:paddingLeft="25dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/black"
                    android:text="City"/>

                <Spinner
                    android:id="@+id/cityspin"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"/>

                <TextView
                    android:focusable="true"

                    android:focusableInTouchMode="true"
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/locationspin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:paddingLeft="-5dp"/>
                <TextView
                    android:focusable="true"
                    android:id="@+id/radiotext"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Choose Gender"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
                <RadioGroup
                    android:id="@+id/gendergroup"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:layout_height="wrap_content">

                    <RadioButton
                        android:textSize="18dp"
                        android:id="@+id/maleradio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"

                        />
                    <RadioButton

                        android:textSize="18dp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/femaleradio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        />

                    <RadioButton

                        android:textSize="18dp"
                        android:id="@+id/otherradio"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        />


                </RadioGroup>

                <TextView
                    android:focusable="true"
                    android:id="@+id/agetext"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Select Your Age"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <DatePicker
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/datepikker"
                    android:layout_marginTop="-10dp"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    android:spinnersShown="true"/>





                <Button
                    android:id="@+id/mainbtn"
                    android:textColor="@color/black"
                    android:layout_width="150dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="CONTINUE"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/vie_bg"/>



<!--                <EditText-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:ems="10"-->
<!--                    android:textSize="18dp"-->
<!--                    android:inputType="textEmailAddress"-->
<!--                    android:padding="17dp"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:hint="yourname@email.com"-->
<!--                    android:background="@drawable/box"-->
<!--                    android:paddingLeft="25dp"-->
<!--                    android:layout_height="wrap_content"/>-->





            </LinearLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="Already have an account?"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:layout_marginBottom="25dp"
        android:textColor="#D50000"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".1"
        app:layout_constraintStart_toEndOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>