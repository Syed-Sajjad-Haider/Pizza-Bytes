<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="30dp"
    android:layout_height="match_parent"
    tools:context="com.pizza.pizzabytes.ForgetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/setLinear"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="-15dp"
            android:src="@drawable/ic_baseline_arrow_back_24"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:src="@drawable/lock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"

            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:text="New\nCredientials"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:text="Your Identity has been Verified!\nSet Your New Password"
            android:textAlignment="center"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/newpassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/padlock"
            android:drawablePadding="25dp"
            android:ems="10"
            android:fontFamily="serif"
            android:background="@drawable/box"
            android:gravity="center|left"
            android:hint="New Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/newconfirmpassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/padlock"
            android:drawablePadding="25dp"
            android:ems="10"
            android:fontFamily="serif"
            android:background="@drawable/box"
            android:gravity="center|left"
            android:hint="New Confirm Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/newpasswordbtn"
            android:textColor="@color/white"
            android:layout_width="180dp"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="CONTINUE"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/vie_bg"/>

    </LinearLayout>


</ScrollView>