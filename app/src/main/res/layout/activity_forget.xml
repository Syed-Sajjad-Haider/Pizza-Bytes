<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="30dp"
    android:layout_height="match_parent"
    tools:context="com.pizza.pizzabytes.ForgetActivity">

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="-15dp"
            android:src="@drawable/ic_baseline_arrow_back_24"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:src="@drawable/lock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:fontFamily="@font/miriam_libre"
            android:gravity="center"
            android:text="Forget\nPassword"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/miriam_libre"
            android:gravity="center"
            android:text="Provide Your Account Email\nfor which you want to reset password"
            android:textAlignment="center"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/forgetemail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="10dp"
            android:background="@drawable/box"
            android:backgroundTint="#DAD8D8"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="center|center_horizontal|left|center_vertical"
            android:hint="Type Email Here"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/forgetnext"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/vie_bg"
            android:fontFamily="monospace"
            android:text="NEXT"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</ScrollView>